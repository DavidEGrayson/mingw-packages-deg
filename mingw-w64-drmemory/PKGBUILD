  #install -m644 LICENSE.txt -t "${r}/share/licenses/${_realname}"
  #install -m644 win7appid.1.gz -t "${r}/share/man/man1"
  #cd "build-${MINGW_CHOST}"
  #install -m755 win7appid.exe -t "${r}/bin"
}
